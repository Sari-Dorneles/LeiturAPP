<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".telaRecomendacoes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="1">

                <TextView
                    android:id="@+id/textRECO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jetbrains_mono_bold"
                    android:text="RECOMENDAÇÕES"
                    android:textColor="#DB2CB4"
                    android:textSize="40dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_widht="fill_parent">


                <ImageView
                    android:id="@+id/imgFILME"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginRight="500dp"
                    android:layout_span="1"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/filme_george" />

                <TextView
                    android:id="@+id/textFILME2"
                    android:layout_height="wrap_content"
                    android:layout_widht="match_parent"
                    android:fontFamily="@font/jetbrains_mono_bold"
                    android:text="Filme: 1984"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textFILME3"
                    android:layout_height="wrap_content"
                    android:layout_widht="match_parent"
                    android:scaleType="fitCenter"
                    android:text="SINOPSE SINOPSE SINOPSE "
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </TableRow>

            <TableRow
                android:layout_widht="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgJOGO"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_widht="match_parent"
                    android:layout_span="2"
                    android:layout_marginRight="500dp"
                    app:srcCompat="@drawable/jogo_george" />

                <TextView
                    android:id="@+id/textJOGO"
                    android:layout_widht="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jetbrains_mono_bold"
                    android:text="Jogo: O Grande Irmão chegou — e é você"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textJOGO2"
                    android:layout_widht="match_parent"
                    android:layout_height="wrap_content"
                    android:text="texto texto texto"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_widht="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imgARTIGO"
                    android:layout_widht="200dp"
                    android:layout_height="250dp"
                    app:srcCompat="@drawable/artigo"
                    android:layout_marginRight="600dp"

                <TextView
                    android:id="@+id/textARTIGO"
                    android:layout_widht="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="148dp"
                    android:fontFamily="@font/jetbrains_mono_bold"
                    android:text="ARTIGO: George Orwell, 120 anos: por que 1984 continua tão relevante e atual?"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textLINK"
                    android:layout_widht="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLIQUE AQUI PARA ACESSAR O ARTIGO DE OPINIÃO"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>